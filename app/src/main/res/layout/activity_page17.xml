<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B3034"
    android:orientation="vertical"
    tools:context=".Page17">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/Back"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Money"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="100dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="410dp"
        android:layout_height="670dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#1E2327">

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="330dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="#2B3034"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/group34"
                android:layout_gravity="center|top"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply Promo Code"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our representive sent you a promo code.if you\ngot it please enter this code for enjoy\n
                50%  of all  ride"
                android:textColor="#545B63"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"/>

            <TextView
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:background="@drawable/shap"
                android:text="APPLY"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="20dp"/>
        </androidx.cardview.widget.CardView>
        
        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="115dp"
            app:cardBackgroundColor="#2B3034"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Referral code"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_gravity="center|top"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share referral code with friend to get discount\non all ride."
                android:layout_gravity="center|top"
                android:layout_marginTop="50dp"
                android:textSize="15dp"
                android:textColor="#545B63"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="UI8THEBEST01"
                android:textColor="@color/white"
                android:background="#2E353A"
                android:layout_marginLeft="50dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share Your Referral Code"
            android:layout_gravity="bottom"
            android:layout_marginBottom="90dp"
            android:textSize="20dp"
            android:textColor="#545B63"
            android:layout_marginLeft="90dp"/>
        
        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="25dp"
            app:cardBackgroundColor="#2B3034"
            app:cardElevation="40dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="90dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/apple"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="25dp"
            app:cardBackgroundColor="#2B3034"
            app:cardElevation="40dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="190dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/google"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="25dp"
            app:cardBackgroundColor="#2B3034"
            app:cardElevation="40dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="290dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/facebook"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>




    </androidx.cardview.widget.CardView>



</LinearLayout>