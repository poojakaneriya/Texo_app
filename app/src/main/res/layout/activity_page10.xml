<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B3034"
    android:orientation="vertical"
    android:gravity="center|bottom"
    tools:context=".page10">

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="300dp"
        app:cardBackgroundColor="#545B63"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="144 Broughton Ave,Bloomfiled"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#2B3034"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="800 E 180th st, the Bronx"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/white"/>

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="180dp"
            android:layout_gravity="bottom"
            app:cardBackgroundColor="#1E2327">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#545B63">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/car3"
                    android:layout_gravity="center|top"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comfort"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 $"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#545B63">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/car3"
                    android:layout_gravity="center|top"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 x 4 "
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 $"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#545B63">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/car3"
                    android:layout_gravity="center|top"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 x 4 "
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 $"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"/>

            </androidx.cardview.widget.CardView>
            
            <EditText
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:background="#FFC000"
                android:layout_gravity="bottom"
                android:text="GET A CAR"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>